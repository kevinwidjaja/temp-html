cream= #fffdd0
darkorange= #FF8C00
lightgreen =#90EE90

body
	background: white
	margin 0
	font-family Arial, sans-serif
	
h1
	padding-left 16px
	color orange
	
.nav
	position relative
	background cream
	overflow hidden
	
.nav a
	float left
	color black
	text-align center
	padding 14px 16px
	text-decoration none
	font-size 17px
	
	
.nav 
	&-centere1 a
		float none
		position absolute
		top 50%
		left 30%
		color red
		transform translate(-50%, -50%)
	&-centere2 a
		float none
		position absolute
		top 50%
		left 50%
		color red
		transform translate(-50%, -50%)
	&-centere3 a
		float none
		position absolute
		top 50%
		left 70%
		color red
		transform translate(-50%, -50%)
		
.nav a.active
		background darkorange
		color white
		
.column
	float left
	width 31%
	padding 15px
	

.column.side
	width 30%
	
.column.middle
	width 60%

.row:after
	content ""
	display table
	clear both	

.container
	display block
	position relative
	margin-top 30px
	padding-left 35px
	margin-bottom 12px
	width 40%
	cursor pointer
	font-size 18px
	& .checkmark:after
		left 7px
		top 4px
		width 5px
		height 8px
		border solid white
		border-width 0 3px 3px 0
		transform rotate(45deg)
	
//hide browser default checkbox
.container input
	position absolute
	opacity 0
	cursor pointer
	height 0
	width 0

//custom checkbox
.checkmark
	position absolute
	top 0
	left 0
	height 20px
	width 20px
	background lightgrey

//when check add background
.container input:checked~
	&.checkmark
		background lightgreen
	
		
//checkmark indicator
.checkmark:after
	content: ""
	position absolute
	display none 
	
//when check
.container input:checked ~.checkmark:after
		display block

.card
	box-shadow 0 4px 8px 0 rgba(0,0,0,0.2)
	transition 0.3s
	&_container
		padding 2px 16px
		
.sub
	padding-top 2px
	padding-left 2px
	

input[type=text]
	width 100%
	padding 12px 20px
	margin 8px 0
	box-sizing border-box
	box-shadow 0 0px 2px 0 rgba(0,0,0,0.1)
	
input[type=number]
	width 100%
	padding 12px 20px
	margin 8px 0
	box-sizing border-box
	box-shadow 0 0px 2px 0 rgba(0,0,0,0.1)
	
input[type=text2]
	width 100%
	height 100px
	padding 12px 20px
	margin 8px 0
	box-sizing border-box
	box-shadow 0 0px 2px 0 rgba(0,0,0,0.1)
	
input:invalid
	border-color red
	
input:valid
	border-color lightgreen
	
.txt
	padding-left 15px
	
.price
	padding-left 50%
	
.button
	background orange
	border none
	color white
	padding 15px 32px
	text-align center
	text-decoration none
	display inline-block
	font-size 16px
	margin 4px 2px
	width 85%
	cursor pointer
	
section
	display flex
	flex-flow row wrap
	
section > div
	flex 1
	padding 0.5rem
	
input[type="radio"]
	display none
		
input[type="radio"]:not(:disabled) ~ .label-e
	cursor pointer
	
input[type="radio"]:disabled ~ .label-e
	color hsla(150,5%,75%,1)
	border-color hsla(150,5%,75%,1)
	box-shadow none
	cursor not-allowed

.label-e
	height 60%
	width 80%
	display block
	background white
	border 2px solid hsla(150,5%,50%,1)
	border-radius 20px
	padding 1rem
	margin-bottom 1rem
	text-align center
	box-shadow 0px 3px 10px -2px hsla(150,5%,65%,0.5)
	position relative
	
input[type="radio"]:checked + .label-e
	background hsla(150,75%,50%,1)
	color hsla(215, 0%, 100%, 1)
	box-shadow  0px 0px 20px hsla(150, 100%, 50%, 0.75)
	
input[type="radio"]:checked + .label-e::after
	color hsla(215, 5%, 25%, 1)
	// font-family FontAwesome
	border 2px solid hsla(150, 75%, 45%, 1)
	// content "\f00c"
	font-size 24px
	position absolute
	top: -25px
	left: 50%
	transform: translateX(-50%)
	height: 50px
	width: 50px
	line-height: 50px
	text-align: center
	border-radius: 50%
	background: white
	box-shadow: 0px 2px 5px -2px hsla(0, 0%, 0%, 0.25)   
    	
input[type="radio"]#control_05:checked + .label-e
	background red
	border-color red
	
p 
	font-weight 900   
	

.finish
	padding-left 30%
	padding-top 10%
	
.link
	color black
	text-decoration none

// for mobile device
@media screen and (max-width: 800px)
		&.nav a
			float none
			display block
			
		&.nav-centere1 a, .nav-centere2 a, .nav-centere3 a
			position relative
			top 0
			left 0
			transform none
			
		&.column
			width 100%
			
		&.column.side, .column.middle
			width 100%
			
		section
			flex-direction column
			
  			